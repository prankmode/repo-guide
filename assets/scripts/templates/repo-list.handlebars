{{#each repos as |repo|}}

  <!-- Developers, why are we using data-id and not just id? -->
  <ul data-id="{{repo.id}}">
    <li>Name: {{repo.name}}</li>

    <!-- description -->
    {{#if repo.description}}
      <li>{{repo.description}}</li>
    {{else}}
      <li>No description.</li>
    {{/if}}

    <!-- Github user -->
    {{#if repo.github_user}}
      <li>{{repo.github_user}}</li>
    {{else}}
      <li>No Github user.</li>
    {{/if}}

    <!-- URL -->
    {{#if repo.full_url}}
      <li>{{repo.full_url}}</li>
    {{else}}
      <li>No URL.</li>
    {{/if}}

    <li><button id="delete-repo" class="btn btn-default" repoid="{{repo.id}}">Remove this repo</button></li>
  </ul>

{{/each}}
